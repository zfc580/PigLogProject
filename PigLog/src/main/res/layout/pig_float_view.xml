<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <com.meitu.piglog.util.CircleView
        android:id="@+id/tv_float_drag"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_centerVertical="true"
        app:circleColor="@color/framework_color_773CED_60"
        app:circleRadius="18dp"/>
    <TextView
        android:id="@+id/tv_float_display"
        android:visibility="gone"
        android:layout_toRightOf="@+id/tv_float_drag"
        android:layout_marginLeft="2dp"
        android:layout_centerVertical="true"
        android:maxLines="10"
        android:background="@drawable/pig_log_panel_background"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
</RelativeLayout>
